###############################################################################
# LLM / OPENROUTER
###############################################################################

# Model used by OpenRouter
OPENROUTER_NARRATIVE_MODEL=arliai/qwq-32b-arliai-rpr-v1:free

# OpenRouter API credentials (required for inference)
OPENROUTER_API_URL=https://openrouter.ai/api/v1
OPENROUTER_API_KEY=your-openrouter-api-key-here


###############################################################################
# QDRANT VECTOR DATABASE
###############################################################################

# Local Qdrant (docker compose) example:
# QDRANT_API_URL=http://localhost:6333
# Or remote cluster URL:
QDRANT_API_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-here


###############################################################################
# OLLAMA
###############################################################################

# Local Ollama:
# OLLAMA_BASE_URL=http://localhost:11434
# Remote cluster default:
OLLAMA_BASE_URL=https://ollama.dev.memorise.sdu.dk
OLLAMA_MODEL=llama3.3:latest


###############################################################################
# KEYCLOAK / AUTHENTICATION
###############################################################################

# Local dev Keycloak:
# KEYCLOAK_BASE_URL=http://localhost:8080
KEYCLOAK_BASE_URL=https://keycloak.dev.memorise.sdu.dk

KEYCLOAK_REALM=oauth2-proxy
KEYCLOAK_CLIENT_ID=oauth2-proxy

# Secrets (must be provided for any login flows)
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret
KEYCLOAK_USERNAME=your-keycloak-username
KEYCLOAK_PASSWORD=your-keycloak-password

# Time before token expiry when refresh should happen
KEYCLOAK_SAFETY_MARGIN_SECONDS=30


###############################################################################
# POSTGRES DATABASE (Docker Compose or local development)
###############################################################################

DB_NAME=ai_engine_dev
DB_USER=ai_engine
DB_PASSWORD=devpassword123

# Local Postgres container (Docker Compose):
DB_HOST=db
DB_PORT=5432

# SQLAlchemy driver
DB_DRIVERNAME=postgresql+psycopg


###############################################################################
# SQLITE (LOCAL EVENT LOGGING)
###############################################################################

# Optional: only needed if you encrypt SQLite events
SQL_DATABASE_URL=
SQL_DATABASE_KEY=


###############################################################################
# QDRANT COLLECTION CONFIG
###############################################################################

COLLECTION_NAME=omeka-items
FIELD_NAME_GEO=locations
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
SEARCH_LIMIT=5


###############################################################################
# APPLICATION PARAMETERS
###############################################################################

READING_SPEED_WPS=4.2
IMG_EXTRA_FIXED_TIME=1.3
